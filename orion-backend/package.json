{
  "name": "orion-backend",
  "version": "2.0.0",
  "private": true,
  "workspaces": [
    "services/*",
    "shared",
    "scripts"
  ],
  "scripts": {
    "build": "tsc -b",
    "build:clean": "tsc -b --clean && tsc -b",
    "test": "echo \"Error: no test specified\" && exit 1",
    "worker:start": "npm start --workspace=services/ingestion-worker",
    "worker:build": "npm run build --workspace=services/ingestion-worker",
    "scripts:build": "npm run build --workspace=scripts",
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && find . -name 'dist' -type d -prune -exec rm -rf '{}' +",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f ingestion-worker"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
