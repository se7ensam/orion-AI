#!/usr/bin/env python3
"""
Orion CLI Entry Point

Convenience script to run Orion CLI commands.
Usage: ./orion <command> [options]
"""

import sys
import os

# Add services to path if running from project root
sys.path.insert(0, os.path.dirname(os.path.abspath(__file__)))

if __name__ == "__main__":
    from services.cli.cli import main
    main()
